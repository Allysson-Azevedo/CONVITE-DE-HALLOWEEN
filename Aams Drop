<script>
// Function to auto-refresh the guest list with error handling
function autoRefreshGuestList() {
    setInterval(() => {
        try {
            const currentStorageGuests = JSON.parse(localStorage.getItem('halloweenGuests')) || [];
            if (JSON.stringify(currentStorageGuests) !== JSON.stringify(guests)) {
                guests = currentStorageGuests;
                updateGuestList();
            }
        } catch (error) {
            console.error('Error refreshing guest list:', error);
            localStorage.setItem('halloweenGuests', JSON.stringify([]));
        }
    }, 30000); // 30 seconds
}

document.addEventListener('DOMContentLoaded', function() {
    // Adjust number of decorations based on screen size
    const decorationCount = window.innerWidth < 768 ? 4 : 8;
    for(let i = 0; i < decorationCount; i++) {
        let ghost = document.querySelector('.ghost').cloneNode(true);
        ghost.style.left = Math.random() * window.innerWidth + 'px';
        ghost.style.top = Math.random() * window.innerHeight + 'px';
        ghost.style.animationDelay = Math.random() * 5 + 's';
        document.body.appendChild(ghost);
    }

    for(let i = 0; i < 6; i++) {
        let pumpkin = document.querySelector('.pumpkin').cloneNode(true);
        pumpkin.style.left = Math.random() * window.innerWidth + 'px';
        pumpkin.style.top = Math.random() * window.innerHeight + 'px';
        document.body.appendChild(pumpkin);
    }

    for(let i = 0; i < 5; i++) {
        let bat = document.querySelector('.bat').cloneNode(true);
        bat.style.left = Math.random() * window.innerWidth + 'px';
        bat.style.top = Math.random() * window.innerHeight + 'px';
        bat.style.animationDelay = Math.random() * 3 + 's';
        document.body.appendChild(bat);
    }

    // Start the auto-refresh
    autoRefreshGuestList();
    
    // Initialize the guest list
    updateGuestList();
});

// Lista de convidados no localStorage
let guests = JSON.parse(localStorage.getItem('halloweenGuests')) || [];

function updateGuestList() {
    const guestList = document.getElementById('guestList');
    const guestCount = document.getElementById('guestCount');
    guestList.innerHTML = '';
    
    guests.forEach((guest, index) => {
        const li = document.createElement('li');
        li.innerHTML = `
            ${guest}
            <button class="spooky-button" onclick="removeGuest(${index})" style="padding: 5px 10px; font-size: 0.8em;">
                Remover
            </button>
        `;
        guestList.appendChild(li);
    });
    
    guestCount.textContent = guests.length;
    localStorage.setItem('halloweenGuests', JSON.stringify(guests));

    // Adiciona anima√ß√£o ao atualizar a lista
    const listItems = guestList.querySelectorAll('li');
    listItems.forEach((item, idx) => {
        item.style.animation = `fadeIn 0.5s ease-in-out ${idx * 0.1}s`;
    });
}

function addGuest() {
    const guestInput = document.getElementById('guestName');
    const name = guestInput.value.trim();
    
    if (name) {
        if (!guests.includes(name)) {
            guests.push(name);
            updateGuestList();
            guestInput.value = '';
            
            // Adiciona notifica√ß√£o tempor√°ria
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                bottom: 20px;
                left: 50%;
                transform: translateX(-50%);
                background-color: #ff6600;
                color: black;
                padding: 15px;
                border-radius: 5px;
                animation: slideUp 0.3s ease-out, fadeOut 0.3s ease-in 2.7s;
                z-index: 1000;
            `;
            notification.textContent = `üéÉ ${name} confirmado com sucesso! N√£o se esque√ßa da fantasia, bebida e carne! üëª`;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        } else {
            alert('Este convidado j√° est√° na lista!');
        }
    }
}

function removeGuest(index) {
    const removedGuest = guests[index];
    guests.splice(index, 1);
    updateGuestList();
    
    // Adiciona notifica√ß√£o de remo√ß√£o
    const notification = document.createElement('div');
    notification.style.cssText = `
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: #ff3300;
        color: white;
        padding: 15px;
        border-radius: 5px;
        animation: slideUp 0.3s ease-out, fadeOut 0.3s ease-in 2.7s;
        z-index: 1000;
    `;
    notification.textContent = `${removedGuest} foi removido da lista`;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 3000);
}

// Initialize the guest list
updateGuestList();
</script>

</body>
